<script type="text/javascript">
    // Track download button clicks
    function trackDownloadClick(buttonLocation) {
        if (typeof appInsights !== 'undefined') {
            appInsights.trackEvent({
                name: 'DownloadButtonClick',
                properties: {
                    buttonLocation: buttonLocation,
                    timestamp: new Date().toISOString(),
                    page: window.location.pathname
                }
            });
        }
        console.log('Download click tracked:', buttonLocation);
    }

    // Track Experience Elescan Now button clicks
    function trackDemoClick() {
        if (typeof appInsights !== 'undefined') {
            appInsights.trackEvent({
                name: 'ExperienceElescanClick',
