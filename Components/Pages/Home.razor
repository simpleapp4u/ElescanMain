                    page: window.location.pathname,
                    buttonText: 'Experience Elescan Now'
                }
            });
        }
        console.log('Experience Elescan Now click tracked');
    }

    // Track custom metrics
    function trackCustomMetric(metricName, value, properties = {}) {
        if (typeof appInsights !== 'undefined') {
            appInsights.trackMetric({
                name: metricName,
                average: value,
                properties: properties
            });
        }
    }
